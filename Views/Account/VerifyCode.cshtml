@model VerifyCodeInputModel


<div class="login-page">
    <div class="lead">
        <h1>2FA Authentication </h1>
        <p>We have sent you a verification code on your phone number. Please verify: </p>
    </div>

    <partial name="_ValidationSummary" />

    <div class="row">

        
<div class="col-sm-6">
    <div class="card">
        <div class="card-header">
            <h2>Enter Verification Code: </h2>
        </div>

        <div class="card-body">
            <form asp-controller="Account" asp-action="VerifyCode" asp-route-returnurl="@Model.ReturnUrl">
                <input type="hidden" asp-for="ReturnUrl" />

                <div class="form-group">
                    <label >Verification Code</label>
                    <input class="form-control" placeholder="Code" asp-for="VerificationCode" autofocus>
                </div>
               
                
                <button class="btn btn-primary" name="button" value="login">Verify</button>
                
            </form>
        </div>
    </div>
</div> 
 
    </div>
</div>